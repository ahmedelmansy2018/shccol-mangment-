@model IEnumerable<E_learning.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (!Model.Any())
{
    <h3 class="alert alert-danger" > Not Find Data</h3>
}
else
{
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Course.Tittel)
        </th>
        <th>
           FullName
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Course.Tittel)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Student.FName)*@
            @item.Student.FName @item.Student.LName
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Enrollmentid }) |
            @Html.ActionLink("Details", "Details", new { id = item.Enrollmentid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Enrollmentid })
        </td>
    </tr>
}

</table>
}