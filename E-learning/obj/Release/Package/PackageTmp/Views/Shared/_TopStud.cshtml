
@using E_learning.Models
@{
    var StudentStats = ViewBag.TopStudent;
}
@if(StudentStats!=null)
{
    <h3>Top Student</h3>
    foreach (var item in StudentStats)
    {
    
        <div class="row">
            <div class="col-md-7">
                Name: @item.Name<br />
                Num Of Courses: @item.NumberOfCourses<br />
                AverageGrade: @string.Format("{0:n1}" , @item.AverageGrade) <br />
            </div>
           
                <div class=" col-md-5">
                    <div class="thumbnail">
                       
                            <a href="/Student/Details/@Url.Content(item.Studentid .ToString())">

                                <img src="~/Content/Images/std/@Url.Content(item.Image)" style="width:200px;height:200px" alt="...">

                            </a>


                        </div>
                    </div>
               

            
        </div>

    }

}
else
{
<h3>NO Data To DisPlay</h3>
}
