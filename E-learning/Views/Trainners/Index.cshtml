@model IEnumerable<E_learning.Models.Trainner>
    @using E_learning.Controllers

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DeptName)
        </th>
        <th>
            Interests
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department.DeptName)
    </td>
    <td>
        @( ((TrainnersController)this.ViewContext.Controller).GetCourseIntrests(item.Trainnerid))
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Trainnerid }) |
        @Html.ActionLink("Details", "Details", new { id = item.Trainnerid }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Trainnerid })
    </td>
</tr>
}

</table>
